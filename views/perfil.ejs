<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Meu Perfil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Meu Perfil</h3>
      <div>
        <a href="/" class="btn btn-outline-secondary me-2">← Menu</a>
        <a href="/logout" class="btn btn-outline-danger">Sair</a>
      </div>
    </div>

    <% if (msg) { %>
      <div class="alert alert-success"><%= msg %></div>
    <% } %>
    <% if (err) { %>
      <div class="alert alert-danger"><%= err %></div>
    <% } %>

    <div class="row g-4">
      <!-- Card dados básicos -->
      <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Dados da Conta</h5>
            <p class="mb-2"><strong>Nome:</strong> <%= usuario?.nome %></p>
            <p class="mb-0"><strong>Papel:</strong> <span class="badge bg-<%= usuario?.role === 'admin' ? 'danger' : 'secondary' %>">
              <%= usuario?.role %></span></p>
          </div>
        </div>
      </div>

      <!-- Card atualizar e-mail -->
      <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Alterar e-mail</h5>
            <form method="post" action="/perfil/email" autocomplete="off">
              <div class="mb-3">
                <label class="form-label">E-mail atual</label>
                <input type="email" class="form-control" value="<%= usuario?.email %>" disabled>
              </div>
              <div class="mb-3">
                <label class="form-label">Novo e-mail</label>
                <input name="email" type="email" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Senha atual</label>
                <input name="senha_atual" type="password" class="form-control" required minlength="6">
              </div>
              <button class="btn btn-primary">Salvar e-mail</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Card atualizar senha -->
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Alterar senha</h5>
            <form method="post" action="/perfil/senha" autocomplete="off">
              <div class="row g-3">
                <div class="col-12 col-md-4">
                  <label class="form-label">Senha atual</label>
                  <input name="senha_atual" type="password" class="form-control" required minlength="6">
                </div>
                <div class="col-12 col-md-4">
                  <label class="form-label">Nova senha</label>
                  <input name="nova_senha" type="password" class="form-control" required minlength="6">
                </div>
                <div class="col-12 col-md-4">
                  <label class="form-label">Confirmar nova senha</label>
                  <input name="confirmar_senha" type="password" class="form-control" required minlength="6">
                </div>
              </div>
              <button class="btn btn-success mt-3">Salvar senha</button>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>
</html>
